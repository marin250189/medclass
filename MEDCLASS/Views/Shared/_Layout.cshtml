<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MEDICLASS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/datatables.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap-dialog.css" rel="stylesheet" type="text/css">

</head>
<body ng-app="myApp">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MEDICLASS", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <div class="  navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Estudiantes", "Index", "Student")</li>
                        <li>@Html.ActionLink("Asignaturas", "Index", "Subject")</li>
                        <li>@Html.ActionLink("Examenes", "Index", "Quiz")</li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" ng-controller="layoutController" ng-init="init()">
        @RenderBody()
        <hr />
        <div align="center">
            <footer>
                <p>&copy; @DateTime.Now.Year - MEDICLASS powered by VICTORY-SOLUTIONS</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/JS/angular.js"></script>
    <script src="~/Scripts/JS/angular-cookies.js"></script>
    <script src="~/Scripts/JS/app.js"></script>
    <script src="~/Scripts/JS/loginController.js"></script>
    <script src="~/Scripts/JS/mainController.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
